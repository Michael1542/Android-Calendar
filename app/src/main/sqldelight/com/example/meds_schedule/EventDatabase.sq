CREATE TABLE Event (
  id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  date TEXT NOT NULL,
  category TEXT NOT NULL,
  description TEXT
);

selectAllEvents:
SELECT * FROM Event;

selectEventsByDate:
SELECT * FROM Event WHERE date = ?;

insertEvent:
INSERT INTO Event(date, category, description)
VALUES (?, ?, ?);

deleteEvent:
DELETE FROM Event WHERE id = ?;
